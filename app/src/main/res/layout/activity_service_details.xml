<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ServiceDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/subservice_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/air_conditioner_installation" />

            <!--<TextView-->
                <!--android:id="@+id/subservice_name"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/subservice_photo"-->
                <!--android:layout_margin="8dp"-->
                <!--android:text="تركيب تكييف 1.5 حصان"-->
                <!--android:textSize="32sp"-->
                <!--android:textStyle="bold" />-->

            <TextView
                android:id="@+id/subservice_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subservice_photo"
                android:layout_margin="8dp"
                android:textAlignment="textStart"
                android:textColor="@android:color/darker_gray"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/order_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner_button"
        android:padding="8dp"
        android:text="@string/order_now"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

</RelativeLayout>